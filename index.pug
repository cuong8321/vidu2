doctype html
-
  function taomang (batdau, ketthuc) {
    const mang = []
    for (let i = batdau; i <= ketthuc; ++i) {
      mang.push(i)
    }
    return mang
  }
  const ngaytao = new Date()
html
  head
    meta(charset = 'utf-8')
    title Test
  body
    form(method = 'get' action = 'http://google.com')
      label Ngay sinh:
      mixin sltmang(ten, batdau, ketthuc, macdinh)
        select(name = ten)
          each i in taomang(batdau, ketthuc)
            if i === macdinh
              option(value = i selected)= ten + ' ' + i
            else
              option(value = i)= ten + ' ' + i
      +sltmang("ngay", 1, 31, ngaytao.getDate())
      +sltmang("thang", 1, 12, ngaytao.getMonth())
      +sltmang("nam", 1500, 2500, ngaytao.getFullYear())
